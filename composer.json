{
    "name": "bridge/sylius-payment-plugin",
    "type": "project",
    "description": "Bridge's Sylius payment plugin by bank wire transfer",
    "keywords": ["bridge","symfony", "sylius", "payment", "plugin"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Rabah NEKKAH"
        },
        {
            "name": "Ayman BENMADA"
        },
        {
            "name": "Quentin DUBÃˆS"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "sylius/sylius": "^1.10",
        "ext-openssl": "*"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-debug-extension": "^2.0.0",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friendsofsymfony/oauth-server-bundle": "^1.6 || >2.0.0-alpha.0 ^2.0@dev",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "0.12.99",
        "phpstan/phpstan-doctrine": "0.12.33",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpstan/phpstan-webmozart-assert": "0.12.12",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "doctrine/coding-standard": "^9.0",
        "sylius-labs/coding-standard": "^4.0",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "vimeo/psalm": "4.7.1",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/thanks": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.10-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Bridge\\SyliusBridgePlugin\\": "src/",
            "Tests\\Bridge\\SyliusBridgePlugin\\": "tests/"
        },
        "classmap": ["src/BridgeSyliusPaymentPlugin.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Bridge\\SyliusBridgePlugin\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "phpstan": "phpstan analyse -c phpstan.neon -vvv --memory-limit=1024M",
        "phpstan-baseline": "phpstan analyse -c phpstan.neon -vvv --memory-limit=1024M --generate-baseline",
        "cscheck": "phpcs -s",
        "csfix": "phpcbf -s",
        "pest": "pest --coverage",
        "lint": "composer csfix && composer cscheck && composer phpstan && composer pest"
    }
}
